#add
    position absolute
    z-index 1
    width 100vw
    height 100vh
    top 0
    left 0
    background-color alpha(black,0.2)
    display flex
    justify-content center
    align-items center

    .box
        padding 0
        box-sizing border-box
        width 500px
        display block
        text-align left
        padding-top 40px

        button
            display inline-block
            box-sizing border-box
            background-color transparent
            background-size 100%
            margin-left 0
            margin-right 2px
            margin-top 10px

            &:hover
                filter invert(80%)

        #add-port
            background-image url("icons/accept.svg")

        .cancel
            background-image url("icons/cancel.svg")

        input
            background-color white
            color $black