#ports
    width 100vw
    padding 2.5em
    box-sizing border-box
    max-height calc(100vh - 30px) 
    overflow-y auto
    overflow-x hidden

    & > div
        margin-bottom 3em
    
    & > div:last-child
        margin-bottom 0

    .ports-wrapper
        display flex
        

    .host
        margin-bottom 10px
        font-weight 200

    .port
        padding-right 10px
        padding-bottom 10px
        width auto
        display flex

        &:hover button
            opacity 1

        button
            border-radius 0
            padding 0
            margin 0
            width 20px
            height 20px
            margin-left -20px
            opacity 0
            user-select none

            &:focus
                opacity 1

            span 
                width 100%
                height 100%
                background-image url("icons/trash.svg")
                background-size 70%
                image-rendering crisp-edges

    .port, input
        font-weight 200

    input
        font-size 1.2em
        width 5.5em
        color alpha($white, 0.9)
        background-color $black
        padding 10px
        text-align center

        box-sizing border-box
        border-bottom 2px solid transparent
        border-top 2px solid transparent

        &:focus
            border-bottom 2px solid $pink

    input[type=number]::-webkit-inner-spin-button, 
    input[type=number]::-webkit-outer-spin-button
        -webkit-appearance none
        margin 0